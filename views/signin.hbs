<section class="section-user">
    <div class="row">
        <div class="user">
            <div class="user__form">
                
                <form id="signin" class="form" name="signin" method="post" action="signin"> 

                    <div class="form-group">
                        <input type="email" class="form__input text" placeholder="Email Address" id="email" name="email" required>
                        <label for="email" class="form__label" >Email Address</label>
                    </div>

                    <div class="form-group">
                        <input type="password" class="form__input" placeholder="Password" id="password" name="password" required>
                        <label for="password" class="form__label">Password</label>
                    </div>

                    <input class="btn" type="submit" value="Sign In" />

                    <p class="paragraph">Not registed? <a href="/signup">Sign up</a></p>

                </form>
                
            </div>
        </div>
    </div>
</section>